@import "@theatersoft/components"

#pinpad
    top h(8)
    padding-left h(19)
    text-align center
    :global .text
        height h(22)
        width h(71)
        font-size h(16)
        color color-accent
    .key, :global(.icon)
        height h(18)
        width h(21)
        svg
            height h(10)
            width h(10)
    .key, :global(.text), :global(.icon)
        border-radius h(2)
        border h(1) solid color
        background-color color-back
    .key
        border h(1) solid color-accent
    .key:hover, .key:focus, :global(.icon:hover), :global(.icon:focus)
        border h(1) solid color-focus
        color color-focus
        background-color color-focus-back

